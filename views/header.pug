header.header
    .header__logo
        img(src="/img/favicon.png" alt="Voyago logo")
        h1.heading-secondary 
            a.heading-secondary(href="/") Voyago
    nav.nav.nav--tours
        a.nav__el(href="#") All tours
    nav.nav.nav--user
        if user 
            a.nav__el.nav__el--logout Log Out
            a.nav__el(href="/me")
                //- span=user.name.split(' ')[0]
                img.nav__user-img(src=`/img/users/${user.photo}` data-username=`${user.name}` alt=`${user.name}`)
        else
            a.nav__el.login(href='/login') Log in
            button.nav__el.nav__el--cta 
              a(href="/signup") Sign Up